            android:textSize="30dp"
            android:layout_marginLeft="60dp"
            android:text="কাজী নজরুল ইসলাম"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i"

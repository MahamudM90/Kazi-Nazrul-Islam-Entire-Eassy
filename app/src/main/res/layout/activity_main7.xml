            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="125dp"
            android:text=" ঝিলিমিলি"
            android:textColor="#2E86C1"
            android:textSize="35dp"

            />
        <TextView
            android:layout_width="wrap_content"
